<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    app:cardBackgroundColor="@color/white">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="end"
                >

                <TextView
                    android:id="@+id/workforceTypeView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/arimo_medium"
                    android:text="Workforce Type"
                    android:textAlignment="viewStart"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/workforceContractorNameView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/arimo_medium"
                android:text="Contractor"
                android:textAlignment="viewStart"
                android:textSize="16sp"
                android:textColor="@color/golden"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Salary"
                    android:fontFamily="@font/arimo_medium"
                    android:textAlignment="viewStart"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:id="@+id/workforceSalaryPerDayView"/>

                <Button
                    android:id="@+id/markAttendanceButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="@color/skin"
                    android:fontFamily="@font/arimo_medium"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="Mark Attendance"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    app:rippleColor="#E6FFD249" />


            </LinearLayout>
        </LinearLayout>
</androidx.cardview.widget.CardView>